<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.electricity_billing_system.Controllers.Admin.EditUserController"
            prefHeight="200.0" prefWidth="400.0">

    <content>
        <GridPane layoutX="50.0" layoutY="50.0" hgap="10" vgap="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Labels and TextFields -->
            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="name_fld" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="email_fld" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Region:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="region_fld" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <!-- Buttons -->
            <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <Button text="Save" onAction="#saveUser"/>
                <Button text="Cancel" onAction="#cancel"/>
            </HBox>
        </GridPane>
    </content>
</DialogPane>
