<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login-container" stylesheets="@../Styles/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.electricity_billing_system.Controllers.LoginController">
   <VBox layoutY="-2.0" prefHeight="400.0" prefWidth="200.0" styleClass="login-logo-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <FontAwesomeIconView glyphName="BOLT" size="30" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ElecTribe" />
   </VBox>
   <VBox layoutX="229.0" layoutY="30.0" prefHeight="350.0" prefWidth="350.0" styleClass="login-form-container" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="25.0">
      <Label fx:id="user_name_lbl" text="User Name" />
      <TextField fx:id="user_name_fld" styleClass="input-feild" />
      <Label fx:id="password_lbl" text="Password" />
      <TextField fx:id="password_fld" layoutX="10.0" layoutY="35.0" styleClass="input-feild" />
      <Label fx:id="error_lbl" styleClass="error-label" text="Error" />
      <Button fx:id="login_btn" mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
      <Button fx:id="register_btn" mnemonicParsing="false" text="Register" />
   </VBox>
</AnchorPane>
